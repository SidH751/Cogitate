<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.my.cogitateapp.inerfaces.LandingPage"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cogitate"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="40dp"
        android:fontFamily="@font/nexa_bold"
        android:textColor="@color/BtnPrimary"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/cogitateassets"/>
    <TextView
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Cogitate"
        android:fontFamily="@font/nexa_bold"
        android:textSize="18dp"
        android:textColor="#848484"/>
    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have a treasure within you that is infinitely greater than anything the world can offer."
        />
    <Button
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:padding="14dp"
        android:id="@+id/registerFirstScreen"
        android:backgroundTint="#5d5cff"
        android:textColor="@color/white"
        />
    <Button
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:padding="14dp"
        android:id="@+id/loginFirstScreen"
        android:backgroundTint="#54535C"
        android:textColor="@color/white"
        />
    <com.google.android.gms.common.SignInButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_in_button"
        android:layout_margin="5dp"
        />
</LinearLayout>